{
  "name": "Don't Forget",
  "description": "Don't Forget lets you add reminders to chrome which get synced across all sync enabled chrome instances",
  "version": "0.3",
  "permissions": ["notifications", "storage", "alarms"],
  "background": {
    "scripts": ["background/settings.js", "background/omnibox.js", "background/alarms.js"],
    "persistent": false
  },
  "manifest_version": 2,
  "omnibox": {
    "keyword": "df"
  },
  "browser_action": {
    "default_icon": "images/logo_BW128.png",
    "default_popup": "popup/DontForget.html"
  },
  "icons": {
    "128": "images/logo128.png"
  },
  "options_page": "other/alarmmgmt.html"
}
